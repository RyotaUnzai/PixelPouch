{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Launch] Houdini",
            "type": "process",
            "command": "${env:HOUDINI_INSTALLATION_DIR}\\bin\\houdini.exe",
            "args": [],
            "presentation": {
                "close": true,
                "clear": true,
                "reveal": "never"
            },
            "options": {
                "env": {
                    "HOUDINI_DEBUG": "1",
                    "PIXELPOURCH_PATH": "${workspaceFolder}",
                    "PYTHONPATH": "${workspaceFolder}\\python\\third_party;${workspaceFolder}\\houdini\\python;${workspaceFolder}\\python;${workspaceFolder}\\houdini\\hotkeys;${env:PYTHONPATH}",
                    "HOUDINI_TOOLBAR_PATH": "${workspaceFolder}\\houdini\\toolbar;@/^", //"&;${workspaceFolder}\\houdini\\toolbar",
                    "HOUDINI_PATH": "${workspaceFolder}\\houdini;&"
                }
            },
            "isBackground": true
        },
        {
            "label": "Get Houdini Envs",
            "type": "process",
            "command": "${env:HOUDINI_INSTALLATION_DIR}\\bin\\hconfig.exe",
            "args": [
                "-a",
                ">>",
                "houdini_envs.txt"
            ]
        },
        {
            "label": "Wait for Houdini Startup",
            "type": "shell",
            "command": "timeout",
            "args": [
                "12"
            ],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}