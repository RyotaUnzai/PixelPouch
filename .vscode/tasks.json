{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[UI] Generate .py + .pyi from current .ui",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\bin\\generate_py_and_stub_from_ui.ps1",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "[Stub] Generate stub for current file",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\bin\\generate_stub_for_file.ps1",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "[UI] Convert current .ui to .py",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\bin\\generate_py_from_ui.ps1",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Send Python to Houdini",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}\\python\\pixelpouch\\libs\\core\\debug\\client.py",
                "${file}"
            ],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "[Release] Houdini",
            "type": "process",
            "command": "${workspaceFolder}\\.venv\\Scripts\\rez-env.exe",
            "args": [
                "pixelpouch_hou_release",
                "--",
                "houdini.exe"
            ],
            "group": "none",
            "presentation": {
                "close": true,
                "clear": true,
                "reveal": "never"
            }
        },
        {
            "label": "[Debug] Houdini",
            "type": "process",
            "command": "${workspaceFolder}\\.venv\\Scripts\\rez-env.exe",
            "args": [
                "pixelpouch_hou_dev",
                "--",
                "houdini.exe"
            ],
            "group": "test",
            "presentation": {
                "close": true,
                "clear": true,
                "reveal": "never"
            }
        },
        {
            "label": "[Debug] Houdini log",
            "type": "process",
            "command": "${workspaceFolder}\\.venv\\Scripts\\rez-env.exe",
            "args": [
                "pixelpouch_hou_dev",
                "--verbose",
                ">",
                "rez.log",
                "2>&1"
            ],
            "group": "test",
            "presentation": {
                "close": true,
                "clear": true,
                "reveal": "never"
            }
        },
        {
            "label": "[Debug] Check rez env",
            "type": "process",
            "command": "${workspaceFolder}\\.venv\\Scripts\\rez-env.exe",
            "group": "test",
            "args": [
                "--",
                "powershell",
                "-NoExit",
                "-Command",
                "echo 'PWD:'; pwd; echo 'REZ_PACKAGES_PATH:'; echo $Env:REZ_PACKAGES_PATH; echo 'FILES:'; Get-ChildItem Q:\\Github\\PixelPouch\\rez\\projects"
            ]
        },
        {
            "label": "[Debug] Get Houdini Envs",
            "type": "process",
            "command": "${env:HOUDINI_LOCATION}\\bin\\hconfig.exe",
            "group": "test",
            "args": [
                "-a",
                ">>",
                "houdini_envs.txt"
            ]
        },
        {
            "label": "[Debug] Wait for debugpy ready",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\bin\\wait_for_debugpy_ready.ps1"
            ],
            "presentation": {
                "close": true,
                "clear": true,
                "reveal": "never"
            }
        }
    ]
}