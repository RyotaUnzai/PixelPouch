{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Houdini",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 6214
            }
        },
        {
            "name": "Auto Attach to Houdini",
            "type": "debugpy",
            "preLaunchTask": "Wait for ready",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 6214
            },
            "presentation": {
                "hidden": true
            }
        },
    ],
    "compounds": [
        {
            "name": "Debug Houdini",
            "preLaunchTask": "[Launch] Houdini",
            "configurations": [
                "Auto Attach to Houdini"
            ]
        }
    ]
}