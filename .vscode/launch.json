{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Houdini",
            "type": "debugpy",
            // "preLaunchTask": "Wait for Houdini Startup",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 6214
            }
        },
    ],
    "compounds": [
        {
            "name": "Launch Houdini + Auto Attach",
            "preLaunchTask": "[Launch] Houdini",
            "configurations": [
                "Attach to Houdini"
            ]
        }
    ]
}