{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Houdini",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 4737
            }
        },
        {
            "name": "Attach Houdini (auto port)",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": "${command:python.interpreterPath}"
            },
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Launch Houdini + Auto Attach",
            "preLaunchTask": "[Launch] Hou 21.0.512",
            "configurations": [
                "Attach Houdini (auto port)"
            ]
        }
    ]
}